generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model troops {
  id      String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name    String
  scale   Decimal @default(1) @db.Decimal
  height  Decimal @default(0) @db.Decimal
  heading Decimal @default(0) @db.Decimal
}

model home_troops {
  id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  data Json?  @db.Json
}

model enemy_troops {
  id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  data Json?  @db.Json
}
